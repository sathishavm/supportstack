<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div><%= f.label :fullname %><br />
  <%= f.text_field :fullname %></div>
  
 <div><%= f.label :username %><br />
  <%= f.text_field :username %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
  
   <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>
  
   <div><%= f.label :phone %><br />
  <%= f.text_field :phone %></div>
  
  <div><%= f.label :mobile %><br />
  <%= f.text_field :mobile %></div>
  
  <%= fields_for :address do |p| %>

<div><%= p.label :line1, "Line1"%><br />
  <%= p.text_field :line1 %></div>

<div><%= p.label :city,"City" %><br />
  <%= p.text_field :city %></div>

<div><%= p.label :state,"State" %><br />
  <%= p.text_field :state %></div>

<div><%= p.label :country,"Country" %><br />
  <%= p.text_field :country %></div>

<%end%>	

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
